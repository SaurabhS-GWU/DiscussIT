<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.saurabh.discussit.PublishActivity">
    <EditText
        android:id="@+id/article_write"
        android:hint="@string/enter_text"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:gravity="top|left"
        android:layout_height="200dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/subject_spinner"
            android:prompt="@string/select_subject"
            android:entries="@array/subject_arrays"
            android:layout_width="450dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"></Spinner>
    <Button
        android:id="@+id/save_work"
        android:text="@string/save_article"
        android:layout_width="118dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:onClick="saveArticle"
        android:layout_gravity="right" />

  </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/title_field"
            android:hint="@string/title"
            android:layout_weight="1"
            android:layout_width="450dp"
            android:layout_height="wrap_content" />
        <Button
        android:id="@+id/pub_work"
        android:text="@string/publish_article"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    </LinearLayout>


</LinearLayout>
